generator client {
  provider = "prisma-client-js"
  output = "./postgresClient"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pharmacy {
  id               Int                @id @default(autoincrement())
  name             String?            @db.VarChar(50)
  phone            String?            @db.VarChar(20)
  address          String?            @db.Text
  monday           String?            @db.VarChar(50)
  tuesday          String?            @db.VarChar(50)
  wednesday        String?            @db.VarChar(50)
  thursday         String?            @db.VarChar(50)
  friday           String?            @db.VarChar(50)
  saturday         String?            @db.VarChar(50)
  sunday           String?            @db.VarChar(50)
  holiday          String?            @db.VarChar(50)
  PharmacyBookMark PharmacyBookMark[]
}

model PharmacyBookMark {
  id          Int       @id @default(autoincrement())
  user_id     String?
  pharmacy_id Int?
  Pharmacy    Pharmacy? @relation(fields: [pharmacy_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  User        User?     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model User {
  id               String             @id @default(uuid())
  email            String             @unique @db.VarChar(50)
  name             String?            @db.VarChar(20)
  password         String?            @db.VarChar(100)
  phone            String?            @unique @db.VarChar(20)
  profileImg       String?            @default("imageUrl")
  isDeleted        Boolean?           @default(false)
  birth            String?            @db.VarChar(9)
  createdAt        DateTime?          @default(now()) @db.Date
  updatedAt        DateTime?          @updatedAt
  provider         Provider?          @default(LOCAL)
  role             Role?              @default(USER)
  Inquiry          Inquiry[]
  PharmacyBookMark PharmacyBookMark[]
  PillBookMark     PillBookMark[]
}

model Inquiry {
  id      String  @id @default(uuid())
  content String  @db.VarChar(320)
  user_id String?
  User    User?   @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Pill {
  id           String         @id @default(uuid())
  code         String?        @unique @db.VarChar(10)
  name         String?        @db.VarChar(20)
  shape        Shape?
  letters      String?        @db.VarChar(50)
  colors       Colors?
  PillBookMark PillBookMark[]
}

model PillBookMark {
  id      String  @id @default(uuid())
  pill_id String?
  user_id String?
  Pill    Pill?   @relation(fields: [pill_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  User    User?   @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  Alarm   Alarm[]
}

model Alarm {
  id                  String             @id @default(uuid())
  pillBookMark_id     String?             
  PillBookMark        PillBookMark?      @relation(fields: [pillBookMark_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

enum Provider {
  GOOGLE
  KAKAO
  LOCAL
}

enum Colors {
  white
  brown
  green
  yellow
  pink
  blue
  orange
  red
  transparent
  black
  purple
  gray
}

enum Role {
  ADMIN
  USER
}

enum Shape {
  rectangle
  oval
  circle
  pentagon
  square
  triangle
  rhombus
  hexagon
  etc
}
